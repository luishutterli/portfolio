---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
}

const { title = "Luis Hutterli - Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Luis Hutterli - Kreuzlingen, Schweiz" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="flex flex-col bg-white min-h-screen">
    <Navigation transition:name="nav" transition:persist />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
