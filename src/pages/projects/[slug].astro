---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { render } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project: CollectionEntry<"projects">) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<"projects">;
}

const { project }: Props = Astro.props;
const { Content } = await render(project);
---

<Layout title={project.data.name}>
  <main>
    <!-- Hero Section -->
    <section class="px-4 lg:px-6 pt-8">
      <div class="mx-auto max-w-4xl">
        <div class="mb-8">
          {project.data.image && (
            <div class="mb-6 rounded overflow-hidden">
              <img 
                src={project.data.image} 
                alt={project.data.name} 
                class="w-full h-56 lg:h-72 object-cover"
                transition:name={`project-image-${project.id}`}
              />
            </div>
          )}
          
          <h1 class="mb-3 font-medium text-slate-900 text-3xl lg:text-4xl" transition:name={`project-title-${project.id}`}>
            {project.data.name}
          </h1>
          <p class="mb-5 text-slate-600 text-base">
            {project.data.description}
          </p>
          
          <div class="flex flex-wrap items-center gap-2 mb-6">
            <span class={`px-3 py-1.5 rounded text-sm ${
              project.data.state === "Fertig" 
                ? "bg-green-100 text-green-800" 
                : "bg-yellow-100 text-yellow-800"
            }`}>
              {project.data.state}
            </span>
            {project.data.featured && (
              <span class="bg-blue-100 px-3 py-1.5 rounded text-blue-800 text-sm">
                ★ Featured
              </span>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="bg-slate-50 px-4 lg:px-6 py-4">
      <div class="mx-auto max-w-4xl">
        <!-- Technology Tags -->
        <div class="mb-8">
          <h2 class="mb-4 font-medium text-slate-900 text-xl">Technologien</h2>
          <div class="flex flex-wrap gap-2">
            {project.data.tags.map((tag: string) => (
              <span class="bg-white px-3 py-1.5 border border-slate-200 rounded text-slate-700 text-sm">
                {tag}
              </span>
            ))}
          </div>
        </div>

        <!-- Links -->
        <div class="mb-8">
          <h2 class="mb-4 font-medium text-slate-900 text-xl">Links</h2>
          <div class="flex flex-wrap gap-3">
            {project.data.github && (
              <a 
                href={project.data.github} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center gap-2 bg-slate-900 hover:bg-slate-800 px-4 py-2.5 rounded font-medium text-white text-sm"
              >
                GitHub
              </a>
            )}
            {project.data.links?.map((link: {title: string, url: string}) => (
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 px-4 py-2.5 rounded font-medium text-white text-sm"
              >
                {link.title}
              </a>
            ))}
          </div>
        </div>

        <!-- Timeline -->
        {(project.data.startDate || project.data.endDate) && (
          <div class="mb-8">
            <h2 class="mb-4 font-medium text-slate-900 text-xl">Timeline</h2>
            <div class="flex lg:flex-row flex-col gap-3 text-slate-600 text-sm">
              {project.data.startDate && (
                <div class="flex items-center gap-2">
                  <span class="font-medium">Gestartet:</span>
                  <span>{project.data.startDate.toLocaleDateString("de-DE")}</span>
                </div>
              )}
              {project.data.endDate && (
                <div class="flex items-center gap-2">
                  <span class="font-medium">Abgeschlossen:</span>
                  <span>{project.data.endDate.toLocaleDateString("de-DE")}</span>
                </div>
              )}
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Project Content -->
    <section class="px-4 lg:px-6 py-8">
      <div class="mx-auto max-w-4xl">
        <div class="max-w-none prose prose-slate">
          <Content />
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <section class="px-4 lg:px-6 py-6 border-slate-200 border-t">
      <div class="mx-auto max-w-4xl">
        <a 
          href="/projects" 
          class="font-medium text-slate-600 hover:text-slate-900 text-sm"
        >
          ← Zurück zu allen Projekten
        </a>
      </div>
    </section>
  </main>
</Layout>


